<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Microphone Permission -->
    <key>NSMicrophoneUsageDescription</key>
    <string>HelpEm needs microphone access to record your voice commands.</string>
    
    <!-- Speech Recognition (for future use) -->
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>HelpEm uses speech recognition to understand your commands.</string>
    
    <!-- Allow arbitrary loads for WebView (development only) -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>
    
    <!-- Background audio (for TTS playback) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
    </array>
</dict>
</plist>
