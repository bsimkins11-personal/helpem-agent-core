{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install -w backend --omit=dev --no-audit --no-fund --cache /tmp/npm-cache"
  },
  "deploy": {
    "startCommand": "npm run -w backend prisma:migrate && npm run -w backend start",
    "healthcheckPath": "/"
  },
  "variables": {
    "NIXPACKS_NODE_VERSION": "22.12.0"
  }
}
