generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  appleUserId  String?     @unique @map("apple_user_id")
  googleUserId String?     @unique @map("google_user_id")
  stripeCustomerId String? @unique @map("stripe_customer_id")
  email        String?     @unique  // From Apple or Google Sign-In
  phone        String?     @unique  // Normalized E.164 format
  displayName  String?     @map("display_name")  // User's display name for tribes
  avatarUrl    String?     @map("avatar_url")    // Profile photo URL
  createdAt    DateTime    @default(now()) @map("created_at")
  lastActiveAt DateTime    @default(now()) @map("last_active_at")

  // Referral/Evangelist program
  referralCode              String?   @unique @map("referral_code")  // 8-char code for sharing
  referredByUserId          String?   @db.Uuid @map("referred_by_user_id")
  referredAt                DateTime? @map("referred_at")
  referralBonusExpiresAt    DateTime? @map("referral_bonus_expires_at")  // 2 free months for referee
  evangelistBadgeExpiresAt  DateTime? @map("evangelist_badge_expires_at")  // Deprecated
  evangelistLifetimeCount   Int       @default(0) @map("evangelist_lifetime_count")  // Signup tally
  earnedPremiumMonths       Int       @default(0) @map("earned_premium_months")  // Every 3 signups = 1 month (lifetime total)
  premiumMonthsThisYear     Int       @default(0) @map("premium_months_this_year")  // Yearly counter (max 3)
  premiumMonthsYear         Int?      @map("premium_months_year")  // Year for the counter (e.g. 2026)
  firstMeaningfulUseAt      DateTime? @map("first_meaningful_use_at")  // First meaningful in-app action

  // Relations
  inputs       UserInput[]
  instruction  UserInstruction?
  tribeMemberships TribeMember[]
  tribeMessages    TribeMessage[]
  activityDays     UserActivityDay[]
  referralRewardsGiven ReferralReward[] @relation("InviterRewards")
  inAppNotifications InAppNotification[]
  subscriptionStatuses  UserSubscriptionStatus[]
  appStoreNotifications AppStoreNotification[]

  @@index([email])
  @@index([phone])
  @@index([referralCode])
  @@index([referredByUserId])
  @@map("users")
}

model UserInput {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid @map("user_id")
  content   String
  type      String   @default("text")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_inputs")
}

model UserInstruction {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @unique @db.Uuid @map("user_id")
  data      Json     @default("{}")
  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_instructions")
}

model GlobalRule {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key       String   @unique
  data      Json     @default("{}")
  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("global_rules")
}

model Appointment {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid @map("user_id")
  title     String
  withWhom  String?  @map("with_whom")
  datetime  DateTime
  durationMinutes Int @default(30) @map("duration_minutes")
  createdAt DateTime @default(now()) @map("created_at")
  
  // Tribe tracking - if this item was added by a tribe
  addedByTribeId   String?   @db.Uuid @map("added_by_tribe_id")
  addedByTribeName String?   @map("added_by_tribe_name")
  
  // Origin tracking - REQUIRED for silent deletion protection
  originTribeItemId     String?   @db.Uuid @map("origin_tribe_item_id")
  originTribeProposalId String?   @db.Uuid @map("origin_tribe_proposal_id")
  
  @@index([userId, addedByTribeId])
  @@index([userId, originTribeItemId])
  @@map("appointments")
}

model Todo {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String    @db.Uuid @map("user_id")
  title        String
  priority     String    @default("medium")
  dueDate      DateTime? @map("due_date")
  reminderTime DateTime? @map("reminder_time")
  completedAt  DateTime? @map("completed_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  
  // Tribe tracking - if this item was added by a tribe
  addedByTribeId   String?   @db.Uuid @map("added_by_tribe_id")
  addedByTribeName String?   @map("added_by_tribe_name")
  
  // Origin tracking - REQUIRED for silent deletion protection
  originTribeItemId     String?   @db.Uuid @map("origin_tribe_item_id")
  originTribeProposalId String?   @db.Uuid @map("origin_tribe_proposal_id")
  
  @@index([userId, addedByTribeId])
  @@index([userId, originTribeItemId])
  @@map("todos")
}

model Habit {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid @map("user_id")
  title     String
  frequency String   @default("daily")
  daysOfWeek String[] @default([]) @map("days_of_week")
  completions Json   @default("[]")
  createdAt DateTime @default(now()) @map("created_at")
  
  // Tribe tracking - if this item was added by a tribe
  addedByTribeId   String?   @db.Uuid @map("added_by_tribe_id")
  addedByTribeName String?   @map("added_by_tribe_name")
  
  // Origin tracking - REQUIRED for silent deletion protection
  originTribeItemId     String?   @db.Uuid @map("origin_tribe_item_id")
  originTribeProposalId String?   @db.Uuid @map("origin_tribe_proposal_id")
  
  @@index([userId, addedByTribeId])
  @@index([userId, originTribeItemId])
  @@map("habits")
}

model GroceryItem {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String    @db.Uuid @map("user_id")
  name         String
  category     String?
  completedAt  DateTime? @map("completed_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  
  // Tribe tracking - if this item was added by a tribe
  addedByTribeId   String?   @db.Uuid @map("added_by_tribe_id")
  addedByTribeName String?   @map("added_by_tribe_name")
  
  // Origin tracking - REQUIRED for silent deletion protection
  originTribeItemId     String?   @db.Uuid @map("origin_tribe_item_id")
  originTribeProposalId String?   @db.Uuid @map("origin_tribe_proposal_id")
  
  @@index([userId, addedByTribeId])
  @@index([userId, originTribeItemId])
  @@map("grocery_items")
}

/// Tribe items are invitations. They never become active without explicit acceptance.
model Tribe {
  id          String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String?        // Optional tribe description set by admin
  ownerId     String         @db.Uuid @map("owner_id")
  avatarUrl   String?        @map("avatar_url")

  // Tribe type: friend or family
  // friend: appointments, todos, chat only
  // family: all features including routines and groceries
  tribeType   String         @map("tribe_type")

  // Default permissions for members (family tribes)
  // "propose" = members must propose items for approval
  // "add" = members can add items directly
  defaultTasksPermission        String  @default("propose") @map("default_tasks_permission")
  defaultAppointmentsPermission String  @default("propose") @map("default_appointments_permission")
  defaultRoutinesPermission     String  @default("propose") @map("default_routines_permission")
  defaultGroceriesPermission    String  @default("propose") @map("default_groceries_permission")

  createdAt   DateTime       @default(now()) @map("created_at")
  deletedAt   DateTime?      @map("deleted_at")

  members     TribeMember[]
  items       TribeItem[]
  memberRequests TribeMemberRequest[]
  activities  TribeActivity[]
  messages    TribeMessage[]

  @@map("tribes")
}

/// Tribe items are invitations. They never become active without explicit acceptance.
model TribeMember {
  id                String                    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tribeId           String                    @db.Uuid @map("tribe_id")
  userId            String                    @db.Uuid @map("user_id")
  invitedBy         String                    @db.Uuid @map("invited_by")
  displayName       String?                   @map("display_name")
  isAdmin           Boolean                   @default(false) @map("is_admin")
  useTribeDefaults  Boolean                   @default(true) @map("use_tribe_defaults")
  invitedAt         DateTime                  @default(now()) @map("invited_at")
  acceptedAt        DateTime?                 @map("accepted_at")
  leftAt            DateTime?                 @map("left_at")

  // Management scope: only_shared (default) or shared_and_personal
  managementScope   String                    @default("only_shared") @map("management_scope")

  // Notification preferences
  proposalNotifs    Boolean                   @default(true) @map("proposal_notifications")
  digestNotifs      Boolean                   @default(false) @map("digest_notifications")
  
  tribe             Tribe                     @relation(fields: [tribeId], references: [id], onDelete: Cascade)
  user              User                      @relation(fields: [userId], references: [id], onDelete: Cascade)
  permissions       TribeMemberPermissions?
  personalItemPermissions TribeMemberPersonalItemPermissions?
  proposals         TribeProposal[]

  @@unique([tribeId, userId])
  @@map("tribe_members")
}

/// Tribe items are invitations. They never become active without explicit acceptance.
model TribeMemberPermissions {
  id                    String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  memberId              String       @unique @db.Uuid @map("member_id")
  
  // Per-category permissions: can_add, can_remove
  canAddTasks           Boolean      @default(true) @map("can_add_tasks")
  canRemoveTasks        Boolean      @default(false) @map("can_remove_tasks")
  
  canAddRoutines        Boolean      @default(true) @map("can_add_routines")
  canRemoveRoutines     Boolean      @default(false) @map("can_remove_routines")
  
  canAddAppointments    Boolean      @default(true) @map("can_add_appointments")
  canRemoveAppointments Boolean      @default(false) @map("can_remove_appointments")
  
  canAddGroceries       Boolean      @default(true) @map("can_add_groceries")
  canRemoveGroceries    Boolean      @default(false) @map("can_remove_groceries")
  
  member                TribeMember  @relation(fields: [memberId], references: [id], onDelete: Cascade)
  
  @@map("tribe_member_permissions")
}

/// Tribe items are invitations. They never become active without explicit acceptance.
model TribeItem {
  id          String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tribeId     String          @db.Uuid @map("tribe_id")
  createdBy   String          @db.Uuid @map("created_by")
  
  // Item type: task, routine, appointment, grocery
  itemType    String          @map("item_type")
  
  // Item data (JSON with type-specific fields)
  data        Json
  
  createdAt   DateTime        @default(now()) @map("created_at")
  deletedAt   DateTime?       @map("deleted_at")
  
  tribe       Tribe           @relation(fields: [tribeId], references: [id], onDelete: Cascade)
  proposals   TribeProposal[]
  
  @@map("tribe_items")
}

/// Tribe items are invitations. They never become active without explicit acceptance.
model TribeProposal {
  id          String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  itemId      String       @db.Uuid @map("item_id")
  recipientId String       @db.Uuid @map("recipient_id")
  
  // State: proposed, not_now, accepted, dismissed
  state       String       @default("proposed")
  
  createdAt   DateTime     @default(now()) @map("created_at")
  
  // Idempotency tracking
  idempotencyKey String?   @map("idempotency_key") // For proposal creation
  stateChangedAt DateTime  @default(now()) @map("state_changed_at")
  
  // Only ONE notification per proposal
  notifiedAt  DateTime?    @map("notified_at")
  
  item        TribeItem    @relation(fields: [itemId], references: [id], onDelete: Cascade)
  recipient   TribeMember  @relation(fields: [recipientId], references: [id], onDelete: Cascade)
  
  @@unique([itemId, recipientId])
  @@index([recipientId, state])
  @@map("tribe_proposals")
}

/// Idempotency tracking for proposal actions
/// Prevents duplicate actions when client retries
model TribeProposalAction {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String   @db.Uuid @map("user_id")
  proposalId      String   @db.Uuid @map("proposal_id")
  idempotencyKey  String   @unique @map("idempotency_key")
  action          String   // "accept", "not_now", "dismiss"
  createdAt       DateTime @default(now()) @map("created_at")
  
  @@unique([userId, idempotencyKey])
  @@index([proposalId, userId])
  @@map("tribe_proposal_actions")
}

/// Member add requests - when non-owners want to add someone to the tribe
model TribeMemberRequest {
  id                String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tribeId           String       @db.Uuid @map("tribe_id")
  requestedBy       String       @db.Uuid @map("requested_by") // Member who requested
  requestedUserId   String       @db.Uuid @map("requested_user_id") // User they want to add
  state             String       @default("pending") // pending, approved, denied
  createdAt         DateTime     @default(now()) @map("created_at")
  reviewedAt        DateTime?    @map("reviewed_at")
  reviewedBy        String?      @db.Uuid @map("reviewed_by") // Owner who reviewed
  
  tribe             Tribe        @relation(fields: [tribeId], references: [id], onDelete: Cascade)
  
  @@unique([tribeId, requestedUserId, state])
  @@index([tribeId, state])
  @@map("tribe_member_requests")
}

/// Tribe activity feed - coordination events, not chat
enum TribeActivityType {
  SYSTEM
  ADMIN
}

model TribeActivity {
  id          String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tribeId     String            @db.Uuid @map("tribe_id")
  type        TribeActivityType
  message     String
  createdBy   String?           @db.Uuid @map("created_by") // null for system events
  createdAt   DateTime          @default(now()) @map("created_at")
  
  tribe       Tribe             @relation(fields: [tribeId], references: [id], onDelete: Cascade)
  hiddenBy    TribeActivityHiddenBy[] // Per-user hidden state
  
  @@index([tribeId, createdAt])
  @@map("tribe_activities")
}

/// Per-user hidden state for activity entries
/// Allows users to hide activities without affecting others
model TribeActivityHiddenBy {
  id          String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  activityId  String         @db.Uuid @map("activity_id")
  userId      String         @db.Uuid @map("user_id")
  hiddenAt    DateTime       @default(now()) @map("hidden_at")
  
  activity    TribeActivity  @relation(fields: [activityId], references: [id], onDelete: Cascade)
  
  @@unique([activityId, userId], name: "activityId_userId")
  @@index([userId, hiddenAt])
  @@map("tribe_activity_hidden_by")
}

/// Tribe messages - chat messages between tribe members
model TribeMessage {
  id          String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tribeId     String            @db.Uuid @map("tribe_id")
  userId      String            @db.Uuid @map("user_id") // Who sent the message
  message     String            // Message content
  createdAt   DateTime          @default(now()) @map("created_at")
  editedAt    DateTime?         @map("edited_at")
  deletedAt   DateTime?         @map("deleted_at")

  tribe       Tribe             @relation(fields: [tribeId], references: [id], onDelete: Cascade)
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([tribeId, createdAt])
  @@map("tribe_messages")
}

/// Pending Tribe Invitations - track invites to non-members
/// When user signs up with matching email/phone, they auto-join the tribe
model PendingTribeInvitation {
  id                 String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tribeId            String    @db.Uuid @map("tribe_id")
  invitedBy          String    @db.Uuid @map("invited_by")
  
  // Contact identifier (email or phone)
  contactIdentifier  String    @map("contact_identifier")
  contactType        String    @map("contact_type") // "email" or "phone"
  
  // Display name from contact book
  contactName        String?   @map("contact_name")
  
  // Inviter display name (for personalized messaging)
  inviterName        String?   @map("inviter_name")
  
  // Permissions for when they join
  permissions        Json      @default("{}")
  
  // Tracking
  createdAt          DateTime  @default(now()) @map("created_at")
  expiresAt          DateTime  @map("expires_at")
  
  // Status
  state              String    @default("pending") // "pending", "accepted", "expired"
  acceptedAt         DateTime? @map("accepted_at")
  acceptedBy         String?   @db.Uuid @map("accepted_by")
  
  @@unique([tribeId, contactIdentifier])
  @@index([contactIdentifier, state])
  @@index([tribeId, state])
  @@index([expiresAt, state])
  @@map("pending_tribe_invitations")
}

/// Controls what the tribe can do to a member's personal items
/// This is set by the member themselves to control tribe access to their personal data
/// 
/// CRITICAL PRIVACY RULE:
/// - Users ALWAYS have the right to delete items from their personal lists
/// - Deletions are SILENT - no notifications sent to tribe or the user who added the item
/// - This ensures users maintain full control over their personal space without social friction
model TribeMemberPersonalItemPermissions {
  id                    String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  memberId              String       @unique @db.Uuid @map("member_id")
  
  // Can tribe add items to my personal lists?
  tribeCanAddToMyAppointments    Boolean      @default(false) @map("tribe_can_add_to_my_appointments")
  tribeCanAddToMyTodos            Boolean      @default(false) @map("tribe_can_add_to_my_todos")
  tribeCanAddToMyRoutines         Boolean      @default(false) @map("tribe_can_add_to_my_routines")
  tribeCanAddToMyGroceries        Boolean      @default(false) @map("tribe_can_add_to_my_groceries")
  
  // Can tribe remove items from my personal lists?
  // NOTE: Even if false, users can ALWAYS delete their own items silently
  tribeCanRemoveFromMyAppointments Boolean    @default(false) @map("tribe_can_remove_from_my_appointments")
  tribeCanRemoveFromMyTodos       Boolean     @default(false) @map("tribe_can_remove_from_my_todos")
  tribeCanRemoveFromMyRoutines     Boolean     @default(false) @map("tribe_can_remove_from_my_routines")
  tribeCanRemoveFromMyGroceries    Boolean     @default(false) @map("tribe_can_remove_from_my_groceries")
  
  // Can tribe update items in my personal lists?
  tribeCanUpdateMyAppointments     Boolean     @default(false) @map("tribe_can_update_my_appointments")
  tribeCanUpdateMyTodos           Boolean     @default(false) @map("tribe_can_update_my_todos")
  tribeCanUpdateMyRoutines        Boolean     @default(false) @map("tribe_can_update_my_routines")
  tribeCanUpdateMyGroceries       Boolean     @default(false) @map("tribe_can_update_my_groceries")
  
  member                TribeMember  @relation(fields: [memberId], references: [id], onDelete: Cascade)
  
  @@map("tribe_member_personal_item_permissions")
}

// =============================================================================
