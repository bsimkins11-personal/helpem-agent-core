/// Stores Google OAuth tokens for calendar integration
/// Tokens are encrypted at rest using AES-256
model GoogleConnection {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String    @unique @db.Uuid @map("user_id")
  
  // OAuth tokens (encrypted with AES-256)
  accessToken     String    @map("access_token")
  refreshToken    String    @map("refresh_token")
  tokenExpiresAt  DateTime  @map("token_expires_at")
  
  // Connection metadata
  googleEmail     String    @map("google_email")
  scope           String    @default("https://www.googleapis.com/auth/calendar")
  
  // Sync state
  lastSyncedAt    DateTime? @map("last_synced_at")
  syncEnabled     Boolean   @default(true) @map("sync_enabled")
  
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  @@map("google_connections")
}

// =============================================================================
// APPLE CALENDAR INTEGRATION (CalDAV/iCloud)
// =============================================================================

/// Stores Apple iCloud credentials for CalDAV calendar integration
/// Credentials are encrypted at rest using AES-256
model AppleCalendarConnection {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String    @unique @db.Uuid @map("user_id")

  // CalDAV credentials (encrypted with AES-256)
  appleEmail      String    @map("apple_email")
  appPassword     String    @map("app_password")

  // CalDAV server info (discovered during connection)
  caldavUrl       String?   @map("caldav_url")
  principalUrl    String?   @map("principal_url")

  // Sync state
  lastSyncedAt    DateTime? @map("last_synced_at")
  syncEnabled     Boolean   @default(true) @map("sync_enabled")

  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@map("apple_calendar_connections")
}

// =============================================================================
// PUSH NOTIFICATIONS
// =============================================================================

/// Stores device tokens for push notifications (APNs + Web Push)
model UserDevice {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String    @db.Uuid @map("user_id")

  // Device info
  deviceToken     String    @unique @map("device_token")
  platform        String    @default("ios") // ios, android, web
  deviceName      String?   @map("device_name")
  pushSubscription Json?    @map("push_subscription") // Web Push subscription object

  // Notification preferences
  notificationsEnabled Boolean @default(true) @map("notifications_enabled")
  
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  lastActiveAt    DateTime  @default(now()) @map("last_active_at")
  
  @@index([userId])
  @@map("user_devices")
}

/// Tracks sent notifications to prevent duplicates
model NotificationLog {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String    @db.Uuid @map("user_id")
  
  // Notification details
  type            String    // "tribe_digest", "tribe_invite", etc.
  referenceId     String?   @map("reference_id") // tribeId, etc.
  
  sentAt          DateTime  @default(now()) @map("sent_at")
  
  @@index([userId, type, sentAt])
  @@index([userId, referenceId, type])
  @@map("notification_logs")
}

/// In-app notifications (no push)
model InAppNotification {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid @map("user_id")
  type      String
  title     String
  body      String?
  data      Json?
  createdAt DateTime @default(now()) @map("created_at")
  readAt    DateTime? @map("read_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, readAt])
  @@map("in_app_notifications")
}

/// Tribe invite tokens for shareable links
model TribeInviteToken {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tribeId         String    @db.Uuid @map("tribe_id")
  
  // Token for the invite link
  token           String    @unique
  
  // Who created this invite
  createdBy       String    @db.Uuid @map("created_by")
  
  // Optional: limit uses or set expiry
  maxUses         Int?      @map("max_uses")
  usedCount       Int       @default(0) @map("used_count")
  expiresAt       DateTime? @map("expires_at")
  
  createdAt       DateTime  @default(now()) @map("created_at")
  
  @@index([token])
  @@index([tribeId])
  @@map("tribe_invite_tokens")
}

// =============================================================================
// REFERRAL/EVANGELIST PROGRAM
// =============================================================================

/// Tracks distinct active days per user for referral eligibility
model UserActivityDay {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @db.Uuid @map("user_id")
  date      DateTime @db.Date  // Date only, no time component
  createdAt DateTime @default(now()) @map("created_at")

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
  @@map("user_activity_days")
}

/// Tracks referral rewards (Evangelist badges) awarded to inviters
model ReferralReward {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  inviterId       String   @db.Uuid @map("inviter_id")
  refereeId       String   @db.Uuid @map("referee_id")

  // When the reward was issued
  awardedAt       DateTime @default(now()) @map("awarded_at")

  // Reward type and state
  rewardType      String   @default("premium_month") @map("reward_type")
  status          String   @default("earned") @map("status")

  // Optional reward validity period (used for temporary badges or active months)
  badgeExpiresAt  DateTime? @map("badge_expires_at")
  startsAt        DateTime? @map("starts_at")
  endsAt          DateTime? @map("ends_at")

  // Optional metadata (e.g., source event ids)
  metadata        Json?     @map("metadata")

  // For cap tracking (format: "2026-02")
  awardMonth      String   @map("award_month")

  inviter         User     @relation("InviterRewards", fields: [inviterId], references: [id], onDelete: Cascade)

  @@index([inviterId, awardMonth])
  @@index([refereeId])
  @@map("referral_rewards")
}

/// Tracks referral qualification progress for each invitee
model ReferralProgress {
  id                 String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  inviterId          String   @db.Uuid @map("inviter_id")
  refereeId          String   @db.Uuid @map("referee_id")
  signupAt           DateTime @map("signup_at")
  eligibilityEndsAt  DateTime @map("eligibility_ends_at")
  status             String   @default("pending") @map("status") // pending, usage_qualified, paid_qualified, rewarded, expired
  openDaysRequired   Int      @default(5) @map("open_days_required")
  openDaysCount      Int      @default(0) @map("open_days_count")
  usageQualifiedAt   DateTime? @map("usage_qualified_at")
  paidQualifiedAt    DateTime? @map("paid_qualified_at")
  rewardedAt         DateTime? @map("rewarded_at")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  // Invitee bonus: +1 free month when they subscribe to Basic/Premium
  inviteeBonusGrantedAt  DateTime? @map("invitee_bonus_granted_at")
  inviteeBonusProductId  String?   @map("invitee_bonus_product_id")

  @@unique([refereeId])
  @@index([inviterId, status])
  @@index([inviterId, eligibilityEndsAt])
  @@map("referral_progress")
}

/// Idempotent Stripe webhook event tracking
model StripeEvent {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  eventId   String   @unique @map("event_id") // Stripe event ID (evt_...)
  eventType String   @map("event_type")
  processed Boolean  @default(false)
  payload   Json?
  createdAt DateTime @default(now()) @map("created_at")

  @@index([eventType])
  @@map("stripe_events")
}

/// Stores the latest subscription status per user per platform
model UserSubscriptionStatus {
  id                   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId               String   @db.Uuid @map("user_id")
  platform             String   @default("apple") @map("platform")
  productId            String?  @map("product_id")
  status               String   @map("status") // active, expired, grace, billing_retry, revoked
  verified             Boolean  @default(false) @map("verified")
  environment          String?  @map("environment") // Sandbox or Production
  appAccountToken      String?  @map("app_account_token")
  currentPeriodStart   DateTime? @map("current_period_start")
  currentPeriodEnd     DateTime? @map("current_period_end")
  firstPaidAt          DateTime? @map("first_paid_at")
  lastPaidAt           DateTime? @map("last_paid_at")
  originalTransactionId String? @map("original_transaction_id")
  latestTransactionId  String?  @map("latest_transaction_id")
  lastEventAt          DateTime? @map("last_event_at")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@index([status])
  @@map("user_subscription_status")
}

/// App Store Server Notifications (v2)
model AppStoreNotification {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  notificationUUID String?  @map("notification_uuid")
  notificationType String?  @map("notification_type")
  subtype          String?  @map("subtype")
  environment      String?  @map("environment")
  bundleId         String?  @map("bundle_id")
  appAppleId       String?  @map("app_apple_id")
  userId           String?  @db.Uuid @map("user_id")
  originalTransactionId String? @map("original_transaction_id")
  latestTransactionId   String? @map("latest_transaction_id")
  signedPayload    String   @map("signed_payload")
  decodedPayload   Json?    @map("decoded_payload")
  receivedAt       DateTime @default(now()) @map("received_at")
  processedAt      DateTime? @map("processed_at")

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([notificationUUID])
  @@index([notificationType])
  @@index([userId])
  @@index([originalTransactionId])
  @@map("app_store_notifications")
}
